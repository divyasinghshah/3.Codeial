
<link rel="stylesheet" href="/css/home.css">
<body>
    <%- include('_header') -%>
    <div>
        <h1> <%= title %></h1>

        <% if(locals.user){%>
            <section>
                <form action="/posts/create" method="POST">
                    <textarea name="content" id="" cols="30" rows="5" placeholder="Type Here.."></textarea>
                    <input type="submit" value="POST">
                </form>
            </section>

            <%}%>
        

        <div>
            <ul>
                <% for(post of posts){ %>
                        <li><%= post.content%>
                            <span>--by <%= post.user.name%></span>
                        </li>

                    <%}%>

            </ul>
        </div>
    </div>
    <%- include('_footer') -%>
</body>
